---
import Grid from "@components/Grid.astro";
import Section from "@components/Section.astro";
import Typography from "@components/Typography.astro";

const valueProps = [
  {
    image: "/images/pages/home/value-props/open.svg",
    name: "Open",
    description: "Community driven, rapidly expanding integration ecosystem",
  },
  {
    image: "/images/pages/home/value-props/simple.svg",
    name: "Simple",
    description:
      "One format to unify your ETL, Data warehouse, ML in your lakehouse",
  },
  {
    image: "/images/pages/home/value-props/delta-uniform-dark-bkgd.svg",
    name: "UniForm",
    description: "A universal format for lakehouse interoperability",
  },
  {
    image: "/images/pages/home/value-props/production.svg",
    name: "Production Ready",
    description: "Battle tested in over 10,000+ production environments ​​",
  },
  {
    image: "/images/pages/home/value-props/agnostic.svg",
    name: "Platform Agnostic",
    description: "Use with any query engine on any cloud, on-prem, or locally",
  },
];
---

<Section padding="xxl" className="section">
  <Grid columns={{ md: 2, lg: 5 }} className="grid">
    {
      valueProps.map(({ image, name, description }) => (
        <Typography variant="prose" className="value-prop">
          <img src={image} alt="" loading="lazy" />
          <h4>{name}</h4>
          <p>{description}</p>
        </Typography>
      ))
    }
  </Grid>
</Section>
<style>
  .section {
    color: white;
    background-color: theme(colors.primary);
  }

  .value-prop {
    align-items: center;
    text-align: center;
  }

  .value-prop img {
    max-width: 35%;
    margin-left: auto;
    margin-right: auto;
    line-height: 0;
    display: block;
    margin-bottom: theme(spacing.sm);
  }

  .value-prop h4 {
    font-weight: normal;
  }
</style>
